# Top-level configuration
root = true

# Default global settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_size = 2
indent_style = space
max_line_length = 120
trim_trailing_whitespace = true

# Files that use 4-space indentation
# Python, C/C++, C#, Java, PHP, SQL, JavaScript, TypeScript
[*.{py,c,cpp,h,hpp,cs,java,php,sql,js,jsx,ts,tsx}]
indent_size = 4

# Files with longer line length
# HTML, XML
[*.{html,xml}]
max_line_length = 150

# YAML files
[*.{yaml,yml}]
trim_trailing_whitespace = false

# Markdown files
[*.md]
max_line_length = false
trim_trailing_whitespace = false

# Jenkinsfile
[Jenkinsfile]
max_line_length = 100

# Go files
[*.go]
indent_style = tab
indent_size = 4

# Makefile
[Makefile]
indent_style = tab

# Rust files
[*.rs]
indent_size = 4
max_line_length = 100
